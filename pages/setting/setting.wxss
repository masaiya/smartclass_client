/* service/setting/setting.wxss */
.layout {
  height: 100vh;
  padding: 30rpx 40rpx;
  background: #fcfcfc;
  height: 100vh;
}
.avatar {
  height: 200rpx;
  width: 100%;
  padding: 20rpx 0;
}
.avatar-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
  border-radius: 50%;
  border: 2px solid #fff;
  box-sizing: border-box;
}
.button {
  width: 350rpx !important;
  position: absolute;
  bottom: 40rpx;
  /* height: 60rpx; */
  left: 200rpx;
}
.button2 {
  bottom: 150rpx;
  left: 200rpx;
}
.info-item {
  height: 84rpx;
  position: relative;
}
.version-container {
  margin-top: 40rpx;
  position: relative;
}
.version {
  width: 100%;
  text-align: center;
}
.version-title {
  position: absolute;
  left: 0;
}
.app-name {
  margin-top: 20rpx;
  text-align: center;
  width: 100%;
}
.about-container {
  display: flex;
}
.about-title {
  height: 100rpx;
  line-height: 100rpx;
  width: 100rpx;
}
.about {
  flex: 1;
  text-align: left;
  color: #919191;
}