/* pages/article/article.wxss */
.scroll {
  width: calc(100vw - 50rpx);
  padding: 5px 12px;
  box-sizing: border-box;
  margin: 30rpx auto;
  border: 2px solid #ab3b3a;
}
.title {
  text-align: center;
  font-size: 20px;
  color: #ab3b3a;
  font-weight: 400;
}
.bottom {
  display: flex;
} 
.btn{
  flex: 1;
  background: #b54434;
  margin: 20rpx 10%;
  padding: 10rpx 20rpx;
  text-align: center;
  border-radius: 10rpx;
}