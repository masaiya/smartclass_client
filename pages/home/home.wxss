/* pages/details/details.wxss */
.home {
  height: 100vh;
}
.mask {
  z-index: 9;
  position: absolute;
  width: 100%;
  height: 100vh;
  background: #000;
  opacity: 0.3;
}
.home-content {
  height: calc(100% - 120rpx);
}
.logo {
  width: 100%;
  height: 100rpx;
  position: relative;
  border-bottom: 1px solid #ddd;
}
.logo-item {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  top: 10rpx;
  left: 20rpx;
}
.heart-name {
  left: 120rpx;
  position: absolute;
  line-height: 100rpx;
  display: inline-block;
  height: 100rpx;
}
.menu {
  padding: 60rpx 20rpx 0 20rpx;
}
.menu-item {
  width: 33%;
  height: 178rpx;
  display: inline-block;
  text-align: center;
}
.image-container {
  width: 109rpx;
  height: 109rpx;
  border-radius: 50%;
  margin-left: 70rpx;
  position: relative;
}
.menu-item:nth-child(1) .image-container{
  background: #1CBCB4;
}
.menu-item:nth-child(2) .image-container{
  background: #3AB54A;
}
.menu-item:nth-child(3) .image-container{
  background: #9C26B0;
}
.menu:nth-child(3) .menu-item:nth-child(1) .image-container{
  background: #E13998;
}
.menu:nth-child(3) .menu-item:nth-child(2) .image-container{
  background: #6739B6;
}
.item-images {
  display: block;
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 19rpx;
  left: 19rpx;
}
.target-language {
  width: 200rpx;
  display: inline-block;
  position: absolute;
  right: 0;
}
.picker-view {
  height: 100rpx;
}
.logo .title {
  height: 100rpx;
  line-height: 100rpx;
  width: 200rpx;
  position: absolute;
  right: 200rpx;
  color: #919191;
  text-align: right;
}
.name {
  margin-top: 15rpx;
  text-align: center;
  display: block;
  font-size: 30rpx;
  color: #919191;
}
.login-container {
  z-index: 10;
  background: #fff;
  width: 80%;
  left: 10%;
  position: absolute;
  top: 250rpx;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
}
.titleText {
  margin: 20rpx auto;
  font-size: 40rpx;
  color: #020e0f;
  text-align: center;
}
.contentText  {
  margin: 0 auto;
  font-size: 30rpx;
  text-align: center;
  color: #666;
}
.authBtn  {
  margin: 64rpx 50rpx 0 50rpx;
  font-size: 35rpx;
  height: 90rpx;
}
.scroll-view {
  position: relative;
}