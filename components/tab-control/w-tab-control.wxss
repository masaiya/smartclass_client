/* components/w-tab-control/w-tab-control.wxss */
.tab-control {
  display: flex;
  margin-bottom: 16rpx;
  width: 100%;
  margin-top: 16rpx;
}
.tab-item {
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.active {
  color: #E85F3E;
  border-bottom: 5rpx solid #E85F3E;
}

.tab-item .active .text {
  padding: 16rpx 10rpx;
  border-bottom: 6rpx solid #E85F3E;
}
